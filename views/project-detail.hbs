<main role="main">

    <div class="album py-3 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="mb-4 project-detail-sb">
                        <div class="project-sidebar-block mb-4">
                            <h2>Links</h2>
                            <div class="project-sidebar-links">
                                <a class="btn btn-primary" href="#">Live Demo</a>
                            </div>
                            <div class="project-sidebar-links">
                                <a class="btn btn-secondary" href="{{project.githubUrl}}">Github Link</a>
                            </div>
                        </div>
                        <hr>
                        <div class="project-sidebar-block mb-4">
                            <h2>Tag</h2>
                            <div class="project-sidebar-links">
                                {{#each project.tags}}
                                <a class="badge badge-{{this.class}}" href="#">{{this.name}}</a>
                                {{/each}}
                            </div>
                        </div>
                        <hr>
                        <div class="project-sidebar-block mb 4">
                            <h2>related Pages</h2>
                            {{#each project.relatedProjects}}
                            <div class="project-sidebar-links">
                                <a class="bc-item" href="{{this.link}}">{{this.name}}
                                </a>
                            </div>
                            {{/each}}
                        </div>
                        <hr>
                        <div class="project-sidebar-block mb 4">
                            <h2>Resources</h2>
                            <div class="project-sidebar-links">
                                <a class="bc-item" href="{{this.link}}">{{this.name}}</a>
                            </div>
                            {{#each project.relatedProjects}}

                            <div class="project-sidebar-links">
                                <a class="bc-item" href="{{this.link}}">{{this.name}}</a>
                            </div>


        
                            {{/each}}
                        </div>
                    </div>
                </div>
            
                <div class="col-md-9">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item bc-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item bc-item"><a href="/projects">Projects</a></li>
                            <li class="breadcrumb-item active" aria-current="page">{{project.name}}</li>
                        </ol>
                    </nav>
                    <h1 class="display-3">{{project.name}}</h1>

                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <p class="card-text">{{project.description}}</p>

                        </div>
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="/images/Me.jpeg"
                                        alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="/images/Me.jpeg"
                                        alt="Second slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</main>