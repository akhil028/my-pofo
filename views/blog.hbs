<div class="container">
    <div class="nav-scroller py-1 mb-2">
        <nav class="nav d-flex justify-content-between">
            <a class="p-2 text-muted" href="#">HTML</a>
            <a class="p-2 text-muted" href="#">CSS</a>
            <a class="p-2 text-muted" href="#">JavaScript</a>
            <a class="p-2 text-muted" href="#">Node.js</a>
            <a class="p-2 text-muted" href="#">Express</a>
            <a class="p-2 text-muted" href="#">MongoDB</a>
            <a class="p-2 text-muted" href="#">REST API</a>
            <a class="p-2 text-muted" href="#">Angular</a>
            <a class="p-2 text-muted" href="#">Bootstrap</a>
        </nav>
    </div>


    {{#if featuredBlog}}
    <div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
        <div class="col-md-12 px-0">
            <h1 class="display-4 font-italic">{{featuredBlog.name}}</h1>
            <p class="lead my-3">{{featuredBlog.description}}</p>
            <p class="lead mb-0"><a href="/blog/{{featuredBlog.alias}}" class="text-white font-weight-bold">Continue reading...</a></p>
        </div>
    </div>
    {{/if}}

    <div class="row mb-2">
        {{#each blogs}}
        <div class="col-md-12">
            <div class="card flex-md-row mb-4 shadow-sm h-md-250">
                <div class="card-body d-flex flex-column align-items-start">
                    <strong class="d-inline-block mb-2 text-{{this.tag.class}}">{{this.tag.name}}</strong>
                    <h3 class="mb-0">
                        <a class="text-dark" href="#">{{this.name}}</a>
                    </h3>
                    <div class="mb-1 text-muted">Nov 12</div>
                    <p class="card-text mb-auto">{{this.description}}</p>
                    <a href="/blog/{{this.alias}}">Continue reading...</a>
                </div>
                <img class="card-img-right flex-auto d-none d-lg-block" data-src="holder.js/200x250?theme=thumb" alt="Card image cap">
            </div>
        </div>
        {{/each}}
    </div>
</div>





